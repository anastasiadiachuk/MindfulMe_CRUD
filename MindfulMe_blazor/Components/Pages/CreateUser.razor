@page "/createuser"
@inject UsersApiController UsersApiController
@inject NavigationManager NavigationManager

<h3>Create User</h3>

<EditForm Model="@userViewModel" OnValidSubmit="CreateUser_" FormName="CreateUserForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="Email">Email:</label>
        <InputText id="Email" @bind-Value="userViewModel.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <InputText id="Password" @bind-Value="userViewModel.Password" class="form-control" />
    </div>

    <div class="form-group">
        <label for="UserName">User Name:</label>
        <InputText id="UserName" @bind-Value="userViewModel.UserName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</EditForm>

@code {
    private CreateUserViewModel userViewModel = new CreateUserViewModel();

    private async Task CreateUser_()
    {
        UsersApiController.CreateUser(userViewModel);
        NavigationManager.NavigateTo("/userlist");
    }
}